<Window x:Class="GenerateurMusique.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="198" Width="289">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>


        <Button Content="Cliquez &#xD;&#xA;pour créer !" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" FontSize="26.667" Height="92" Width="167.24" Click="Button_Click">
			<Button.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF2E48BB" Offset="0"/>
					<GradientStop Color="#FFBFDCEC" Offset="1"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
        <ListView x:Name="SongList" Grid.Column="1" SelectionChanged="SongClick">
            <!--<ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding SongNa}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </ListView>

	</Grid>
</Window>
