<UserControl x:Class="GenerateurMusique.Controls.GenerationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel x:Name="Panel" Orientation="Vertical">
        <TextBox Text="{Binding GName}" Background="Aqua"></TextBox>
        <ListView x:Name="Liste" Background="Yellow">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBox Text="{Binding IName}" Background="Aquamarine"></TextBox>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
